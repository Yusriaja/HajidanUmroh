<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/waPrimaryDark</item>
        <item name="colorPrimaryDark">@color/waPrimaryDark</item>
        <item name="tabBackgroundColor">@color/waPrimaryDark</item>
        <item name="toolbarBackgroundColor">@color/waPrimaryDark</item>
        <item name="textDarkColor">@color/waPrimaryDark</item>
        <item name="textTabColor">@color/waText</item>
        <item name="textWhiteColor">@color/textWhite</item>
        <item name="detailBackground">@color/detailBackgroud</item>
        <item name="imageTransparentOverlay">@color/waTransparent</item>
    </style>

    <style name="ThemeWA" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/waPrimaryDark</item>
        <item name="colorPrimaryDark">@color/waPrimaryDark</item>
        <item name="tabBackgroundColor">@color/waPrimaryDark</item>
        <item name="toolbarBackgroundColor">@color/waPrimaryDark</item>
        <item name="textDarkColor">@color/waPrimaryDark</item>
        <item name="textTabColor">@color/waText</item>
        <item name="textWhiteColor">@color/textWhite</item>
        <item name="detailBackground">@color/detailBackgroud</item>
        <item name="imageTransparentOverlay">@color/waTransparent</item>
    </style>


    <style name="ThemeAnNur" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/pantone331c</item>
        <item name="colorPrimaryDark">@color/pantoneDark331c</item>
        <item name="tabBackgroundColor">@color/pantone331c</item>
        <item name="toolbarBackgroundColor">@color/pantone331c</item>
        <item name="textDarkColor">@color/pantoneDark331c</item>
        <item name="textTabColor">@color/pantoneDark331c</item>
        <item name="textWhiteColor">@color/textWhite</item>
        <item name="detailBackground">@color/detailBackgroud</item>
        <item name="imageTransparentOverlay">@color/pantoneTransparent</item>
    </style>

    <style name="ThemeDarkAnNur" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/palleteDark</item>
        <item name="colorPrimaryDark">@color/palleteDark</item>
        <item name="tabBackgroundColor">@color/palleteDark</item>
        <item name="toolbarBackgroundColor">@color/palleteDark</item>
        <item name="textDarkColor">@color/palleteDark</item>
        <item name="textTabColor">@color/palleteOne</item>
        <item name="textWhiteColor">@color/textWhite</item>
        <item name="detailBackground">@color/detailBackgroud</item>
        <item name="imageTransparentOverlay">@color/palleteDarkTransparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="ThemeWA.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="ThemeWA.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ThemeAnNur.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="ThemeAnNur.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ThemeDarkAnNur.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="ThemeDarkAnNur.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomTabText" parent="Base.Widget.Design.TabLayout">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
    </style>


    <style name="ActionBar.TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:fontFamily">@font/honej</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>
